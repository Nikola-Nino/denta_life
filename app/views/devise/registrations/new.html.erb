<div class="bg-gray-300">
  <div class="flex py-24 px-8 bg-gray-300 justify-center">
				<!-- Row -->
				<div class="w-full lg:w-11/12 flex">
					<!-- Col -->
					<div class="w-full h-auto bg-gray-200 hidden md:block md:w-1/2 bg-cover">
						<%= image_tag('sign-up.png', class:"h-full w-full object-cover align-middle rounded-l-lg") %>
					</div>
					<!-- Col -->
					<div class="w-full lg:w-6/12 bg-gray-200 p-16 rounded-r-lg">
						<h3 class="pt-4 text-2xl text-center">Create an Account!</h3>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="text-left p-0 font-sans">
      </div>
      <div class="mt-5">
        <%= f.label :username, class:"block w-full p-2 border rounded border-gray-300 focus:outline-none focus:ring-1 focus:ring-gray-400 focus:border-transparent "
            placeholder="Username" %>
        <%= f.text_field :username, required: true, autofocus: true, autocomplete: "first-name", class:"block w-full p-2 border rounded border-gray-300 focus:outline-none focus:ring-1 focus:ring-gray-400 focus:border-transparent" %>
        <%= field_has_error(:username, resource)%>

      </div>
      <div class="mt-5">
        <%= f.label :first_name, class:"block w-full p-2 border rounded border-gray-300 focus:outline-none focus:ring-1 focus:ring-gray-400 focus:border-transparent "
            placeholder="First name" %>
        <%= f.text_field :first_name, required: true, autofocus: true, autocomplete: "first-name", class:"block w-full p-2 border rounded border-gray-300 focus:outline-none focus:ring-1 focus:ring-gray-400 focus:border-transparent" %>
        <%= field_has_error(:first_name, resource)%>

      </div>
      <div class="mt-5">
        <%= f.label :last_name, class:"block w-full p-2 border rounded border-gray-300 focus:outline-none focus:ring-1 focus:ring-gray-400 focus:border-transparent "
            placeholder="Last name" %>
        <%= f.text_field :last_name, required: true, autofocus: true, autocomplete: "last-name", class:"block w-full p-2 border rounded border-gray-300 focus:outline-none focus:ring-1 focus:ring-gray-400 focus:border-transparent" %>
        <%= field_has_error(:last_name, resource)%>

      </div>
      <div class="mt-5">
        <%= f.label :email, class:"block w-full p-2 border rounded border-gray-300 focus:outline-none focus:ring-1 focus:ring-gray-400 focus:border-transparent "
            placeholder="E-mail" %>
        <%= f.text_field :email, required: true, autofocus: true, autocomplete: "email", class:"block w-full p-2 border rounded border-gray-300 focus:outline-none focus:ring-1 focus:ring-gray-400 focus:border-transparent" %>
        <%= field_has_error(:email, resource)%>

      </div>
      <div class="mt-5">
        <%= f.label :phone, class:"block w-full p-2 border rounded border-gray-300 focus:outline-none focus:ring-1 focus:ring-gray-400 focus:border-transparent "
            placeholder="Phone number" %>
        <%= f.text_field :phone, required: true, autofocus: true, autocomplete: "phone", class:"block w-full p-2 border rounded border-gray-300 focus:outline-none focus:ring-1 focus:ring-gray-400 focus:border-transparent" %>
        <%= field_has_error(:phone, resource)%>

      </div>
      <div class="mt-5">
        <%= f.label :date_of_birth, class:"block w-full p-2 border rounded border-gray-300 focus:outline-none focus:ring-1 focus:ring-gray-400 focus:border-transparent "
            placeholder="Date of birth" %>
        <%= f.date_field :date_of_birth, required: true, autofocus: true, class:"block w-full p-2 border rounded border-gray-300 focus:outline-none focus:ring-1 focus:ring-gray-400 focus:border-transparent" %>
        <%= field_has_error(:date_of_birth, resource)%>

      </div>
      <div class="mt-5">
        <%= f.label :password, class:"block w-full p-2 border rounded border-gray-300 focus:outline-none focus:ring-1 focus:ring-gray-400 focus:border-transparent "
            placeholder="Password" %>
        <%= f.password_field :password, required: true, autofocus: true, autocomplete: "first-name", class:"block w-full p-2 border rounded border-gray-300 focus:outline-none focus:ring-1 focus:ring-gray-400 focus:border-transparent" %>
        <%= field_has_error(:password, resource)%>

      </div>
      <div class="mt-5">
        <%= f.label :password_confirmation, class:"block w-full p-2 border rounded border-gray-300 focus:outline-none focus:ring-1 focus:ring-gray-400 focus:border-transparent" %>
        <%= f.password_field :password_confirmation, required: true, autocomplete: "new-password", class:"block w-full p-2 border rounded border-gray-300 focus:outline-none focus:ring-1 focus:ring-gray-400 focus:border-transparent"%>
        <%= field_has_error(:password_confirmation, resource)%>
      </div>
      <div class="mt-5">
        <%= f.submit "Register Account", class:"w-full px-4 py-2 font-bold text-white bg-green-500 rounded hover:bg-gray-500 focus:outline-none focus:shadow-outline" %>
        <a class="" href="/users/sign_in" data-test="Link"><span
            class="block  p-5 text-center text-gray-800  text-xs ">Already
            have an account?</span></a>
      </div>
    </div>
  </div>
  <% end %>
</div>
